{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "jsx": "react-jsx"  // Ensure this is set
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
